---
interface Blog {
  title: string;
  description: string;
  datetime: string;
  image?: string;
  url: string;
}

const { blogs } = Astro.props;
---

<section class="py-12 bg-background">
  <div class="container mx-auto px-4 max-w-4xl">
    <h1 class="text-center text-3xl mb-10">Recent posts</h1>
    <ul class="space-y-6">
      {blogs.map((blog: Blog) => (
        <a href={blog.url} class="block">
            <li class="group flex flex-col lg:flex-row items-start bg-background p-5 rounded-lg shadow-md
                border border-default hover:shadow-lg transition-shadow">
                {blog.image && (
                    <div class="block w-full lg:w-1/4 overflow-hidden rounded-lg mb-4 lg:mb-0 lg:mr-6">
                    <img src={blog.image} alt={blog.title} class="w-full h-48 lg:h-auto object-cover object-center rounded-lg
                        group-hover:scale-105 transition-transform duration-300" />
                    </div>
                )}
                <div class="flex-1">
                    <h3 class="text-2xl font-semibold group-hover:text-primary transition-colors">
                        {blog.title}
                    </h3>
                    <p class="text-offset mt-2">{blog.description}</p>
                    <time datetime={blog.datetime} class="block mt-4 text-sm text-offset">{new Date(blog.datetime).toLocaleDateString()}</time>
                </div>
            </li>
        </a>
      ))}
    </ul>
  </div>
</section>
